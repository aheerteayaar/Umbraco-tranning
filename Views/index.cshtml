@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Index>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
	Layout = "master.cshtml";
}

<!-- banner section -->
<section id="home" class="w3l-banner py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-sm-12 mt-lg-0 mt-4">
                <span class="title-small">@Model.Value("titleTag")</span>
                <h1 class="mb-2 title"> <span>I'm</span> @Model.Value("heading") </h1>
                <h1 class="mb-4 title"> a <span class="typed-text"></span><span class="cursor">&nbsp</span></h1>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Provident, excepturi.
                    Distinctio accusantium fugit odit? Fugit ipsam. Sed ac fringilla ex. Nam mauris velit, ac
                    cursus quis, non leo.</p>
                <div class="mt-sm-5 mt-4">
                    <a class="btn btn-primary btn-style mr-2" href="/contact"> Hire Me </a>
                    <a class="btn btn-outline-primary btn-style mr-2" href="/about-me"> Portfolio </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-8 col-sm-10 mt-lg-0 mt-4">
                <div class="img-effect text-lg-center">
                    <img src="@Model.ProfileImage.Url()" alt="@Model.ProfileImage.Url()" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //banner section -->

<!-- home page about section -->
<section class="w3l-index3" id="about">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-4">
                    <div class="position-relative">
                        <img src="@Model.Photo.Url()" alt="" class="radius-image img-fluid">
                    </div>
                </div>
                <div class="col-lg-8 mt-lg-0 mt-5">
                    <h5 class="title-small mb-2">@Model.Value("topTag")</h5>
                    <h3 class="title-big">@Model.Value("topTag")</h3>
                    <p>@Model.Value("description")</p>
                    <a href="/about-me" class="btn btn-style btn-primary mt-lg-5 mt-4">Download CV</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //home page about section -->


<!-- stats -->
<section class="w3l-stats py-lg-5 py-4" id="stats">
    <div class="gallery-inner container py-md-5 py-4">
        <div class="row stats-con">
            <div class="col-sm-3 col-6 stats_info counter_grid">
                <span class="fa fa-laptop"></span>
                <p class="counter">@Model.Value("completedProjects")</p>
                <h4>Completed projects</h4>
            </div>
            <div class="col-sm-3 col-6 stats_info counter_grid1">
                <span class="fa fa-hourglass-end"></span>
                <p class="counter">@Model.Value("inProcesses")</p>
                <h4>In processes</h4>
            </div>
            <div class="col-sm-3 col-6 stats_info counter_grid mt-sm-0 mt-5">
                <span class="fa fa-gift"></span>
                <p class="counter">@Model.Value("awardsReceived")</p>
                <h4>Awards Received</h4>
            </div>
            <div class="col-sm-3 col-6 stats_info counter_grid2 mt-sm-0 mt-5">
                <span class="fa fa-smile-o"></span>
                <p class="counter">@Model.Value("happyClients")</p>
                <h4>Happy Clients</h4>
            </div>
        </div>
    </div>
</section>
